# Matchfile for Suisse Notes iOS
# Documentation: https://docs.fastlane.tools/actions/match/

# Git URL where certificates and profiles are stored
git_url(ENV["MATCH_GIT_URL"] || "https://github.com/xicoarm/certificates.git")

# Default storage mode
storage_mode("git")

# App identifier
app_identifier(["ch.suissenotes.mobile"])

# Team ID
team_id("UTU38DWABG")

# Certificate types to manage
type("appstore")

# Readonly mode - only download existing certificates
readonly(true)

# HTTPS authentication
git_basic_authorization(ENV["MATCH_GIT_BASIC_AUTHORIZATION"])
